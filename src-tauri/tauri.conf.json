{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Playdeck",
  "version": "0.0.1",
  "identifier": "dev.abdrahim.playdeck",
  "build": {
    "frontendDist": "../build/spa",
    "devUrl": "http://localhost:3900",
    "beforeDevCommand": "pnpm serve",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Playdeck",
        "width": 1280,
        "height": 720,
        "minWidth": 1024,
        "minHeight": 576,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": "'self' ipc: http://ipc.localhost",
        "img-src": "'self' asset: http: https:"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "nsis"],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
